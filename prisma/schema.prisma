generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model User {
  id            Int      @id @default(autoincrement())
  username      String  @unique
  email         String?   @unique
  image         String?
  password      String
  trips         Trip[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Trip {
  id         Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  tripName   String
  startDate  DateTime
  endDate    DateTime
  budget     Float
  currency    String
  dropZone    File[]
  events     Event[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Event {
  id            Int      @id @default(autoincrement())
  tripId        Int
  trip          Trip     @relation(fields: [tripId], references: [id])
  activity      String
  startTime     DateTime
  location      String
  estimatedCost Float
  date          DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model File{
  id        Int       @id @default(autoincrement())
  tripId        Int
  trip          Trip     @relation(fields: [tripId], references: [id])
  originalName String
  mimeType  String
  path      String   
}
